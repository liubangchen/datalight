.PHONY: trino_protocol trino_protocol-json trino_protocol-cpp


trino_protocol: trino_protocol-cpp

trino_protocol-cpp: trino_protocol-json
	echo "// DO NOT EDIT : This file is generated by java-to-struct-json" > TrinoProtocol.cpp
	chevron -d trino_protocol.json trino_protocol-json-cpp.mustache >> TrinoProtocol.cpp
	echo "// DO NOT EDIT : This file is generated by java-to-struct-json" > TrinoProtocol.h
	chevron -d trino_protocol.json trino_protocol-json-hpp.mustache >> TrinoProtocol.h
	clang-format -style=file -i TrinoProtocol.h TrinoProtocol.cpp

trino_protocol-json:
	./java-to-struct-json.py special/*.java special/*.inc -j | jq . > trino_protocol.json

trino_protocol.proto: trino_protocol-json
	pystache trino_protocol-protobuf.mustache trino_protocol.json > trino_protocol.proto
